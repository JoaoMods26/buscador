local function fetchRawScript(url)
	local response = request({
		Url = url,
		Method = "GET",
		Headers = { ["Content-Type"] = "application/json" }
	})

	if response and response.Body then
		local success, data = pcall(function()
			return HttpService:JSONDecode(response.Body)
		end)

		if success and typeof(data) == "table" then
			-- Respuesta esperada para recientes: { result = "c√≥digo..." }
			if data.result and typeof(data.result) == "string" then
				return data.result
			end
			-- Respuesta esperada para buscador: tabla con m√°s info
			return data
		end

		-- Si no es JSON v√°lido, probablemente sea un string plano ejecutable
		return response.Body
	end

	return nil
end

-- EJECUTAR (RECENTES)
executeBtn.MouseButton1Click:Connect(function()
--	print("üü† Ejecutar script reciente:", script.slug)

	local url = "https://scriptblox.com/api/script/raw/" .. script.slug
	local raw = fetchRawScript(url)

	if not raw then
	--	warn("‚ùå No se pudo obtener el script (nil)")
		return
	end

	local code = (typeof(raw) == "table" and raw.result) or raw

	if not code or typeof(code) ~= "string" then
		--warn("‚ö†Ô∏è C√≥digo inv√°lido o no es string")
		return
	end

	local func, err = loadstring and loadstring(code) or load(code)
	if func then
		local success, execErr = pcall(func)
		if not success then
		--	warn("‚ùå Error en ejecuci√≥n:", execErr)
		end
	else
	--	warn("‚ùå Error en compilaci√≥n:", err)
	end
end)

