	if SearchBox.Text == "" then
		for _, c in ipairs(ResultsFrame:GetChildren()) do
			if c:IsA("Frame") or c:IsA("TextLabel") then
				c:Destroy()
			end
		end
		showScripts(history, true)
	end
end)

