	local url = "https://scriptblox.com/api/script/raw/" .. script.slug
	local raw = fetchRawScript(url)

	if not raw then
--		warn("‚ùå No se pudo obtener el script (nil)")
		return
	end

	local code = (typeof(raw) == "table" and raw.result) or raw

--	print("üîç Tipo de code:", typeof(code))
	if typeof(code) == "string" then
		if setclipboard then
			setclipboard(code)
	--		print("üìã Script copiado exitosamente.")
		else
	--		warn("‚ö†Ô∏è Tu exploit no soporta setclipboard.")
		end
	else
	--	warn("‚ö†Ô∏è El script recibido no es string, es:", typeof(code))
	end
end)


